@model SistemaInventario.Modelos.Models.Bodega

@{
    var titulo = "Crear Bodega"; 
    ViewBag.Title = titulo;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div style="padding-left:15%; padding-right: 15%; padding-bottom: inherit">
        <div class="row border-0">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        @if (Model.Id != 0)
        {
            //Update
            titulo = "Actualizar bodega";
            <input type="hidden" asp-for="Id" id="id"/>
        }
        <div class="col-12 border-bottom p-0">
            <h2 class="text-primary">@titulo</h2>
        </div>
        
        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Nombre</label>
                <input type="text" asp-for="Nombre" class="form-control" placeholder="Nombre de la bodega" id="name"/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Descrión</label>
                <input type="text" asp-for="Descripcion" class="form-control" placeholder="Descripción de la bodega"/>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Estado</label>
                <select asp-for="Estado" class="form-select">
                    <option value=true>Activo</option>
                    <option value=false>Inactivo</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
        </div>
        
        <br/>
        
        <div>
            @if (Model.Id != 0)
            {
                <partial name="_buttonsUpdate" model="Model.Id"/>
            }
            else
            {
                <partial name="_buttonsInsert"/>
            }
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
    <script>
        document.getElementById("name").addEventListener('change', function (){
            ValidateName();
        });
        
        function ValidateName(){
            var url = '@Url.Content("~/")' + "Admin/Bodega/ValidateName";
            var id = '#id';
            var name = '#name'
            
            $.getJSON(url,{id: $(id).val(), name: $(name).val()}, function (data)
            {
                $.each(data,  function (key, value)
                {
                    if(value){
                        var name = document.getElementById("name")
                        swal("Error", "Ya existe una bodega con ese nombre", "error");
                        name.value = ""; 
                    }
                });                
            })
        }
    </script>
}
